{
  "name": "portfolio",
  "description": "Responsive base theme for Drupal.",
  "proxy" : "http://drupal.dev",
  "bowerDir": "./bower_components",
  "css": {
    "file" : "src/sass/style.scss",
    "src": [
      "src/scss/*.scss",
      "src/scss/**/*.scss"
    ],
    "dest": "assets/css",
    "includePaths": [
      "./node_modules/"
    ]
  },
  "js": {
    "file": "main.js",
    "src": [
      "src/lib/*.js"
    ],
    "dest": "assets/js"
  },
  "images": {
    "src": [
      "assets/images/**/*"
    ],
    "dest": "assets/images/"
  }
}
